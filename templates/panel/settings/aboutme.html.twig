{% extends 'panel/core/base.html.twig' %}

{% block nextTitle %} - Panel | Ustawienia{% endblock %}

{% block body %}
	<div class="container-fluid">
		
		<div class="d-sm-flex align-items-center justify-content-between mb-4">
			<h1 class="h3 mb-0 text-gray-800">Ustawienia - O mnie</h1>
		</div>
		
		<div class="row">
			<div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
				<div class="card card-body mb-3 text-right">
					<div class="alert d-none text-center" id="alert"></div>
					
					<div class="form-group">
						<button class="btn btn-primary" id="btnSave"><i class="fas fa-save"></i> Zapisz</button>
					</div>
				</div>
				<div class="card card-body">
					<textarea class="ckeditor" id="editorContext">
					{{ aboutMeText }}
					</textarea >
				</div>
			</div>
		</div>
		
	</div>
	
	<div class="d-none">
		<input type="hidden" id="CSRF_TOKEN" value="{{ csrf_token('aboutMeUpdate') }}"/>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="/assets/js/ckeditor5/ckeditor.js"></script>
	<script src="/assets/js/panel/utils.js"></script>
	<script src="/assets/js/panel/settings.aboutme.js" charset="utf-8"></script>
{% endblock %}