{% extends 'panel/core/base.html.twig' %}

{% block nextTitle %} - Panel | Artykuły{% endblock %}

{% block body %}
	<div class="container-fluid">
		
		<div class="d-sm-flex align-items-center justify-content-between mb-4">
			<h1 class="h3 mb-0 text-gray-800">Artykuły</h1>
		</div>
		
		<div class="row">
			<div class="col-12 col-sm-8">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><i class="fas fa-info"></i> Znaleziono <strong>{{ articles|length }}</strong> artykułów</li>
				</ol>
				<div class="card card-body">
					
					
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Numer artykułu</th>
								<th>Tytuł</th>
								<th>Status</th>
								<th>Data stworzenia</th>
								<th>Opcje</th>
							</tr>
						</thead>
						<tbody id="orderslist">
							{% for article in articles %}
								<tr>
									<td class="text-center">
										<h5>
										<span class="badge badge-primary">{{ article.getId() }}</span>
										</h5>
									</td>
									<td>{{ article.getTitle() }}</td>
									<td>{{ article.getStatusName() }}</td>
									<td>{{ article.getCreatedAt()|date('Y-m-d H:i:s') }}</td>
									<td>
										<a href="{{ path('panel_article_edit', {id: article.getId()}) }}">
											<button class="btn btn-success btn-sm"><i class="fas fa-edit"></i> Edytuj</button>
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					
				</div>
			</div>
			
			<div class="col-12 col-sm-4">
				<div class="form-group">
					<a href="{{ path('panel_article_add') }}">
						<button class="btn btn-success btn-block"><i class="fas fa-plus"></i> Dodaj artykuł</button>
					</a>
				</div>
				
				<div class="card card-body">
					<legend><i class="fas fa-search"></i> Szukaj oferty</legend>
					<hr />
					
					<div class="alert d-none" id="alert"></div>
					
					<div class="form-group">
						<label for="inp_name">Podaj nazwę produktu: </label>
						<input type="text" id="inp_name" class="form-control">
					</div>
					
					<div class="form-group">
						<h5><i class="fas fa-money"></i> Cena</h5>
						<div class="row">
							<div class="col-5">
								<input type="number" class="form-control" placeholder="od" id="inp_price1">
							</div>
							<div class="col-2 mt-2 align-middle text-center">
								<i class="fas fa-minus fa-1x"></i>
							</div>
							<div class="col-5">
								<input type="number" class="form-control" placeholder="do" id="inp_price2">
							</div>
						</div>
					</div>
					
					
					<div class="form-group text-right">
						<button type="button" id="btnSearch" class="btn btn-info"><i class="fas fa-search-plus"></i> Szukaj</button>
					</div>
				</div>
			</div>
			
		</div>
	</div>
{% endblock %}

{% block javascripts %}
{% endblock %}