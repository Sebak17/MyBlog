{% extends 'panel/core/base.html.twig' %}

{% block nextTitle %} - Panel | Artykuły{% endblock %}

{% block body %}
	<div class="container-fluid">
		
		<div class="d-sm-flex align-items-center justify-content-between mb-4">
			<h1 class="h3 mb-0 text-gray-800">Artykuły</h1>
		</div>
		
		<div class="row">
			<div class="col-12 col-lg-8 order-2 order-lg-1">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><i class="fas fa-info"></i> Znaleziono <strong id="articlesAmount">?</strong> artykułów</li>
				</ol>

					<div class="alert d-none" id="alert"></div>

				<div class="card card-body">
					
					
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Numer artykułu</th>
								<th>Tytuł</th>
								<th>Status</th>
								<th>Tag</th>
								<th>Data stworzenia</th>
								<th>Opcje</th>
							</tr>
						</thead>
						<tbody id="articlesList">
						</tbody>
					</table>
					
				</div>
			</div>
			
			<div class="col-12 col-lg-4 order-1 order-lg-2 mb-3">
				<div class="form-group">
					<a href="{{ path('panel_article_add') }}">
						<button class="btn btn-success btn-block"><i class="fas fa-plus"></i> Dodaj artykuł</button>
					</a>
				</div>
				
				<div class="card card-body">
					<legend><i class="fas fa-search"></i> Szukaj artykułu</legend>
					<hr />
					
					<div class="alert d-none" id="alert"></div>

					<div class="form-group">
						<label for="inp_id">Podaj numer artykułu: </label>
						<input type="number" id="inp_id" class="form-control">
					</div>
					
					<div class="form-group">
						<label for="inp_title">Podaj tytuł artykułu: </label>
						<input type="text" id="inp_title" class="form-control">
					</div>

					<div class="form-group">
						<label for="inp_tag">Podaj tag artykułu: </label>
						<input type="text" id="inp_tag" class="form-control">
					</div>
					
					<div class="form-group text-right">
						<button type="button" id="btnSearch" class="btn btn-info"><i class="fas fa-search-plus"></i> Szukaj</button>
					</div>
				</div>
			</div>
			
		</div>
	</div>
{% endblock %}

{% block javascripts %}
<script src="/assets/js/panel/utils.js"></script>
<script src="/assets/js/panel/articles.list.js"></script>
{% endblock %}